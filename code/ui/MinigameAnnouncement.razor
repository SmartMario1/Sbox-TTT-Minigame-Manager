@using Sandbox;
@using Sandbox.UI;
@using System.Collections.Generic;
@using TerrorTown;
@inherits Panel

@namespace SM1Minigames.UI

<style>
    .bg {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .hello {
        margin: 10px;
        text-shadow: 2px 2px 10px black;
        min-height: 62px;
        animation: fadeout 2s forwards;
        animation-iteration-count: 1;
        animation-delay: 8s; /* This declaration stops the animation from looping. */
    }

    .bigger {
        font-size: 64px;
        color: orange;
    }

    .smaller {
        font-size: 32px;
        color: orange;
    }

    .hello-container {
        display: flex;
        flex-direction: column; /* Change the flex-direction to column */
        align-items: center;
        margin-top: -25%; /* Move the text up by 20% */
        padding-left: 10%;
        padding-right: 10%;
    }

    @@keyframes fadeout {
        0% {
            opacity: 1;
        }

        100% {
            opacity: 0;
        }
    }
</style>

<root>
    <div class="bg">
        <div class="hello-container">
            <div class="hello bigger">@title</div>
            <div class="hello smaller">@description</div>
        </div>
    </div>
</root>


@code
{
    private string title;

    private string description;

    private RealTimeSince init_time;

    public void SetGame(Minigame game)
    {
        title = game.Name;
        description = game.Description;
        init_time = 0;
    }

    [GameEvent.Tick.Client]
    private void DeleteTimer()
    {
        if (init_time > 10)
        {
            this.Delete();
        }
    }
}
